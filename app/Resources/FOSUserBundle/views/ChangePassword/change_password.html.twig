{% extends "app/layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}

{% block page_title %}
    Change password
{% endblock %}

{% block content %}
    {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
        {{ form_widget(form) }}
    <div>
        <input type="submit" class="btn btn-primary ml-auto float-right" value="{{ 'change_password.submit'|trans }}" />
    </div>
    {{ form_end(form) }}
{% endblock %}