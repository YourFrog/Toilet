{% extends 'app/layout.html.twig' %}

{% block page_title %}
    Main page
{% endblock %}

{% block content %}
    {% for article in articles %}
            <div class="alert alert-primary col-12 pt-1 pb-1 pl-2">
                {{ article.createAt.format('m Y') }} - <span class="font-weight-bold">{{ article.title }}</span>
            </div>
            <div class="pl-1 pr-1">{{ article.content }}</div>
            <div class="text-right pr-4"><sub>author: <span class="font-weight-bold">{{ article.author.username }}</span></sub></div>
    {% endfor %}
{% endblock %}